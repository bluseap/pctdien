<div class="page-title">
    <div class="title_left">
        <h3>Sản phẩm <small>Danh sách sẩn phẩm</small></h3>
    </div>
    <div class="title_right">
        <div class="col-md-2 col-sm-5 col-xs-12 form-group pull-right">
            <button id="btnCreate" class="btn btn-success">Tạo mới</button>
        </div>
    </div>
</div>
<div class="page-title">
    <div class="title_left">
        <h3>  <small></small></h3>
    </div>
    <div class="title_right">
        <div class="col-sm-6 col-xs-12 col-xs-12 form-group pull-right">
            <div class="input-group">
                <a class="btn btn-danger" href="~/templates/ProductImportTemplate.xlsx"> File mẫu</a>
                @*<button class="btn btn-primary" id="btn-import" type="button"><i class="fa fa-file-excel-o"></i> Lấy file Excel</button>*@
                <button class="btn btn-default" id="btn-export" type="button"><i class="fa fa-forward"></i> Xuất file Excel</button>
            </div>
        </div>
    </div>
</div>
<div class="page-title">
    <div class="title_left">
        <h3>  <small></small></h3>
    </div>
    <div class="title_right">
        <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right">
            <div class="input-group">
                <input type="text" id="txtKeyword" class="form-control" placeholder="Tìm cho...">
                <span class="input-group-btn">
                    <button class="btn btn-primary" id="btnSearch" type="button">Tìm !</button>
                </span>
            </div>
        </div>
        <div class="col-md-5 col-sm-12  form-group pull-right">
            <select class="form-control" id="ddlCategorySearch">
                <option>-- Chọn Sản phẩm --</option>
            </select>
        </div>
    </div>
</div>
<div class="clearfix"></div>
<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_content">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Tên</th>
                            <th>Danh mục</th>
                            <th>Giá</th>
                            <th>Hình</th>
                            <th>Ngày tạo</th>
                            <th>Trạng thái</th>
                            <th width="20%">#</th>
                        </tr>
                    </thead>
                    <tbody id="tbl-content"></tbody>
                </table>
                <!--Pagination-->
                <div class="row">
                    <div class="col-sm-5">
                        <div class="dataTables_info" id="datatable-checkbox_info" role="status" aria-live="polite">
                            <select id="ddlShowPage">
                                <option value="10" selected="selected">10</option>
                                <option value="20">20</option>
                                <option value="30">30</option>
                                <option value="50">50</option>
                            </select>
                            <span class="item-per-page">
                                bản ghi/trang.
                            </span>
                            Tổng số bản ghi: <strong id="lblTotalRecords"></strong>
                        </div>
                    </div><div class="col-sm-7">
                        <div class="dataTables_paginate paging_simple_numbers" id="datatable-checkbox_paginate">
                            <ul id="paginationUL"></ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

<script id="table-template" type="x-tmpl-mustache">
    <tr>

        <td>{{Name}}</td>
        <td>{{CategoryName}}</td>
        <td>{{Price}}</td>
        <td>{{{Image}}}</td>
        <td>{{CreatedDate}}</td>
        <td>{{{Status}}}</td>
        <th scope="row">
            <a class="btn  btn-sm btn-edit" data-id="{{Id}}" data-toggle="tooltip" data-placement="top" title=" Sửa sản phẩm"><i class="fa fa-pencil"></i></a>
            <a class="btn  btn-sm btn-delete" data-id="{{Id}}" data-toggle="tooltip" data-placement="top" title=" Xóa sản phẩm"><i class="fa fa-trash"></i></a>
            <a href="#" data-id="{{Id}}" class="btn btn-xs btn-images" data-toggle="tooltip" data-placement="top" title=" Quản lý hỉnh sản phẩm"><i class="fa fa-image"></i></a>
            <a href="#" data-id="{{Id}}" class="btn btn-xs btn-quantity" data-toggle="tooltip" data-placement="top" title=" Quản lý số lượng sản phẩm"><i class="fa fa-hourglass-start"></i></a>
            <a href="#" data-id="{{Id}}" class="btn btn-xs btn-whole-price" data-toggle="tooltip" data-placement="top" title=" Quản lý giá bán sản phẩm"><i class="fa fa-money"></i></a>
        </th>
    </tr>
</script>

