@{
    ViewData["Title"] = "Index";
}
@section Styles{
    <link href="~/lib/jQuery-EasyUI/themes/bootstrap/easyui.css" rel="stylesheet" />
    <link href="~/lib/jQuery-EasyUI/themes/icon.css" rel="stylesheet" />
    <link href="~/lib/bootstrap-datepicker/dist/css/bootstrap-datepicker.css" rel="stylesheet" />
}
@section Scripts{

    <script src="~/lib/jQuery-EasyUI/jquery.easyui.min.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap-datepicker/dist/js/bootstrap-datepicker.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap-datepicker/dist/locales/bootstrap-datepicker.vi.min.js" charset="UTF-8" asp-append-version="true"></script>

    <script src="~/app/controllers/vblinhvuc/addeditvblinhvuc.js" asp-append-version="true"></script>
    <script src="~/app/controllers/vblinhvuc/index.js" asp-append-version="true"></script>
    <script>
        var vblinhvuc = new vblinhvucController();
        vblinhvuc.initialize();
    </script>

}

<div class="">
    <div class="page-title">
        <div class="title_left">
            <small>
                <a class="btn btn-link ">
                    Danh mục văn bản
                </a>
                >>
                <a class="btn btn-link btnVanBanLinhVuc">
                    Lĩnh vực văn bản
                </a>
            </small>
        </div>
        <div class="title_right">
            <div class="col-md-3 col-sm-3 col-xs-12 form-group pull-right top_search">
                <button class="btn btn-round btn-warning" id="btn-create" type="button">Thêm mới</button>
            </div>
            <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                <div class="input-group">
                </div>
            </div>
        </div>
    </div>
    <div class="page-title">
        <div class="title_left">
            <h3>  <small></small></h3>
        </div>
        <div class="title_right">
            <div class="col-md-5 col-sm-2 col-xs-12 form-group pull-right">
                <div class="input-group">
                    <input type="text" id="txtTimNoiDung" class="form-control" placeholder="Từ khóa...">
                    <span class="input-group-btn">
                        <button class="btn btn-primary" id="btnTimNoiDung" type="button">Tìm !</button>
                    </span>
                </div>
            </div>
            @*<div class="col-md-3 col-sm-3 col-xs-12 form-group pull-right top_search">
                    <div class="input-group">
                        <select id="ddlKhuVuc" class="form-control"></select>
                    </div>
                </div>*@
        </div>
    </div>
    <div class="clearfix"></div>

    <div class="row">
        <div class="x_panel">
            <div class="row no-print">
                @*<div class="col-xs-12">
                        <button class="btn btn-info pull-right" id="btnXuatExcel" style="margin-right: 5px;"><i class="fa fa-download"></i> Xuất Excel</button>
                    </div>*@
            </div>
            <div class="table-responsive" id="table-responsiveVanBanLinhVuc">
                <table id="tblVanBanLinhVuc" class="table table-striped jambo_table bulk_action" cellspacing="0">
                    <thead>
                        <tr>
                            <th width="=10%">#</th>
                            <th>Tên loại văn bản</th>                          
                            <th>Số thứ tự</th>
                            <th>Ngày tạo</th>
                            <th>Trạng thái</th>
                        </tr>
                    </thead>
                    <tbody id="tblContentVanBanLinhVuc"></tbody>
                </table>
                <div class="row">
                    <div class="col-sm-5">
                        <div class="dataTables_info" id="datatable-checkbox_infoVanBanLinhVuc" role="status" aria-live="polite">
                            <select id="ddl-show-pageVanBanLinhVuc">
                                <option value="10" selected="selected">10</option>
                                <option value="20">20</option>
                                <option value="30">30</option>
                                <option value="50">50</option>
                            </select>
                            <span class="item-per-page">
                                dòng/trang.
                            </span>
                            Tổng cộng: <strong id="lblVanBanLinhVucTotalRecords"></strong>
                        </div>
                    </div>
                    <div class="col-sm-7">
                        <div class="dataTables_paginate" id="datatable-checkbox_paginateVanBanLinhVuc">
                            <ul id="paginationULVanBanLinhVuc"></ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script id="table-VanBanLinhVuc" type="x-tmpl-mustache">
        <tr>
            <th scope="row">
                <a class="btn btn-lg btn-addeditVanBanLinhVuc" data-id="{{Id}}" data-toggle="tooltip" data-placement="top" title="Sửa "><i class="fa fa-pencil"></i> </a>
                @*<a class="btn btn-lg btn-deleteVBPhoiHop" data-id="{{Id}}" data-toggle="tooltip" data-placement="top" title="Xóa ">
                        <i class="fa fa-bitbucket"></i>
                    </a>*@
            </th>
            <td>{{Ten}}</td>         
            <td>{{Stt}}</td>
            <td>{{CreateDate}}</td>
            <td>{{{Status}}}</td>
        </tr>
    </script>
</div>

