                                    <th>Trạng thái</th>
                                </tr>
                            </thead>
                            <tbody id="tblContentDaoTao"></tbody>
                        </table>
                        <div class="row">
                            <div class="col-sm-5">
                                <div class="dataTables_info" id="datatable-checkbox_infoDaoTao" role="status" aria-live="polite">
                                    <select id="ddl-show-pageDaoTao">
                                        <option value="10" selected="selected">10</option>
                                        <option value="20">20</option>
                                        <option value="30">30</option>
                                        <option value="50">50</option>
                                    </select>
                                    <span class="item-per-page">
                                        dòng/trang.
                                    </span>
                                    Tổng cộng: <strong id="lblDaoTaoTotalRecords"></strong>
                                </div>
                            </div><div class="col-sm-7">
                                <div class="dataTables_paginate" id="datatable-checkbox_paginateDaoTao">
                                    <ul id="paginationULDaoTao"></ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script id="table-DaoTao" type="x-tmpl-mustache">
