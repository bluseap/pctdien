                    </div>
                </div>*@
            <div class="clearfix"></div>
            <div class="row">
                <div class="x_panel">
                    <div class="table-responsive" id="table-responsiveDaoTao">
                        <table id="tblDaoTao" class="table table-striped jambo_table bulk_action" cellspacing="0">
                            <thead>
                                <tr>
                                    <th width="=20%">#</th>
                                    <th>Loại đào tạo</th>
                                    <th>Loại bằng</th>
                                    <th>Chuyên môn</th>
                                    <th>Bậc AT</th>
                                    <th>Trường đào tạo</th>
                                    <th>Ngày bắt đầu</th>
                                    <th>Ngày kết thúc</th>
