            <td>{{TenLoaiHinhDaoTao}}</td>
            <td>{{TenLoaiBang}}</td>
            <td>{{ChuyenMon}}</td>
            <td>{{BacDaoTao}}</td>
            <td>{{TenTruong}}</td>
            <td>{{NgayBatDau}}</td>
            <td>{{NgayKetThuc}}</td>
            <td>{{SoLuongDangKy}}</td>
            <td>{{SoLuongHoc}}</td>
            <td>{{{Status}}}</td>
        </tr>
