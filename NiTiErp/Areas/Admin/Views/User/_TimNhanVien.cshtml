<div id="modal-add-edit-TimNhanVien" class="modal fade" tabindex="-1" role="dialog" 
     aria-labelledby="myModalLabel" aria-hidden="true" data-backdrop="false">
    <div class="modal-dialog  modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="bootbox-close-button close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title">Tìm hồ sơ nhân viên</h4>
            </div>
            <div class="modal-body">

                <div class="ln_solid"></div>
                <div class="table-responsive" id="table-responsiveTimNhanVien">
                    <div class="row" id="row-AddEditTimNhanVien">
                        <div class="col-md-3 col-sm-12 col-xs-12 form-group">
                            <select id="ddlKhuVucAddEdit" class="form-control"></select>
                        </div>
                        <div class="col-md-3 col-sm-12 col-xs-12 form-group">
                            <select id="ddlPhongBanAddEdit" class="form-control"></select>
                        </div>
                        <div class="col-md-3 col-sm-12 col-xs-12 form-group">
                            <input type="text" id="txtTimNhanVienAddEdit" class="form-control" placeholder="Từ khóa...">
                        </div>
                        <div class="col-md-3 col-sm-12 col-xs-12 form-group">
                            <button class="btn btn-primary " id="btnTimNhanVienAddEdit" type="button">Tìm !</button>
                        </div>
                    </div>
                    <table id="tblHoSoNhanVienTimNhanVien" class="table table-striped jambo_table bulk_action" cellspacing="0">
                        <thead>
                            <tr>
                                <th width="=20%">#</th>
                                <th>Họ và tên</th>
                                <th>Khu vực</th>
                                <th>Phòng, tổ</th>
                                <th>Chức vụ</th>
                                <th>Ngày tạo</th>
                                <th>Trạng thái</th>
                            </tr>
                        </thead>
                        <tbody id="tblContentHoSoTimNhanVien"></tbody>
                    </table>
                    <div class="row" id="row-AddEditTimNhanVien-infoHoSoTimNhanVien">
                        <div class="col-sm-5">
                            <div class="dataTables_info" id="datatable-checkbox_infoHoSoTimNhanVien" role="status" aria-live="polite">
                                <select id="ddl-show-pageHoSoTimNhanVien">
                                    <option value="10" selected="selected">10</option>
                                    <option value="20">20</option>
                                    <option value="30">30</option>
                                    <option value="50">50</option>
                                </select>
                                <span class="item-per-page">
                                    dòng/trang.
                                </span>
                                Tổng cộng: <strong id="lblHoSoTimNhanVienTotalRecords"></strong>
                            </div>
                        </div><div class="col-sm-7">
                            <div class="dataTables_paginate" id="datatable-checkbox_paginateHoSoTimNhanVien">
                                <ul id="paginationULHoSoTimNhanVien"></ul>
                            </div>
                        </div>
                    </div>
                </div>

                <script id="table-HoSoTimNhanVien" type="x-tmpl-mustache">
                    <tr>
                        <th scope="row">
                            <a class="btn btn-lg btn-editHoSoTimNhanVien" data-id="{{Id}}" data-toggle="tooltip" data-placement="top" title="Sửa hồ sơ"><i class="fa fa-pencil"></i> </a>
                        </th>
                        <td>{{Ten}}</td>
                        <td>{{TenKhuVuc}}</td>
                        <td>{{TenPhong}}</td>
                        <td>{{TenChucVu}}</td>
                        <td>{{CreateDate}}</td>
                        <td>{{{Status}}}</td>
                    </tr>
                </script>
            </div>
        </div>
    </div>
</div>