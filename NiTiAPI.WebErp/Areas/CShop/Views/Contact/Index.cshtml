@inject IViewLocalizer Localizer
@model ContactPageViewModel
@{
    ViewData["Title"] = "Contact";
}
@section Scripts{
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBn9gaKzspPwRtaABhpdtgZnmnkoAxy3ek"></script>
    <script src="~/cshop-app/controllers/contact/index.js" asp-append-version="true"></script>
    <script>
        var contactObj = new contactController();
        contactObj.initialize();
    </script>
}
<input type="hidden" id="hidLng" value="@Model.Contact.Lng" />
<input type="hidden" id="hidLat" value="@Model.Contact.Lat" />
<input type="hidden" id="hidAddress" value="@Model.Contact.Address" />
<input type="hidden" id="hidName" value="@Model.Contact.Name" />
<!-- Breadcrumbs -->
<div class="breadcrumbs">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <ul>
                    <li class="home"> <a title="Go to Home Page" href="index.html">@Localizer["Home"]</a><span>&raquo;</span></li>
                    <li><strong>@Localizer["Contact"]</strong></li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumbs End -->
<!-- Main Container -->
<section class="main-container col1-layout">
    <div class="main container">
        <div class="row">
            <section class="col-main col-sm-12">
                <div id="contact" class="page-content page-contact">
                    <div class="page-title">
                        <h2>@Localizer["ContactUs"]</h2>
                    </div>
                    <div id="message-box-conact">@Localizer["WeServe"].</div>
                    <div class="row">
                        <div class="col-xs-12 col-sm-6" id="contact_form_map">
                            <h3 class="page-subheading">@Localizer["pleasecallme"].</h3>
                            <p>@Localizer["WeTrading"]..</p>
                            <br />
                            <ul>
                                <li><i class="fa fa-circle"></i>@Localizer["ServeQuickly"]. </li>
                                <li><i class="fa fa-circle"></i>@Localizer["mostcustomers"]. </li>
                                <li><i class="fa fa-circle"></i>@Localizer["Everytime"]. </li>
                            </ul>
                            <br />
                            <ul class="store_info">
                                <li><i class="fa fa-home"></i>@Model.Contact.Address</li>
                                <li><i class="fa fa-phone"></i><span>@Model.Contact.Phone</span></li>
                                <li><i class="fa fa-envelope"></i>Email: <span><a href="mailto:@Model.Contact.Email">@Model.Contact.Email</a></span></li>
                            </ul>
                        </div>
                        <div class="col-sm-6">
                            @if (ViewData["Success"] != null)
                            {

                                if ((bool)ViewData["Success"] == true)
                                {
                                    <div class="alert alert-success">
                                        Thank you for your feedback. We are going to reply your order soon.
                                    </div>

                                }
                                else
                                {
                                    <div class="alert alert-danger">
                                        Have an error in send feedback progress. Please contact to administrator.
                                    </div>

                                }


                            }
                            else
                            {
