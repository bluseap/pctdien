                                @*<img src="/cnews-side/images/products/p3.jpg" alt="">*@
                                <a class=" clickPostId" data-id="{{Id}}">{{{Image}}}</a>
                            </div>
                        </div>
                    </div>
                    <div class="col col-sm-8 col-lg-8">
