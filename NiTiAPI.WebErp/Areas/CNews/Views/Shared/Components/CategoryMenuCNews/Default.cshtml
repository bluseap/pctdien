@inject IViewLocalizer Localizer
@model List<CategoryNewsViewModel>

@{
    //var categories = Model.Result;
    var @corname = @ViewData["CorporationName"];
}

@foreach (var item in Model.Where(x => x.ParentId == 0))
{
<li class="dropdown">
    @if ((item.Description != null ? item.Description.ToString().Substring(0, 1) : "") == "/")
    {
        <a href=@item.Description data-hover="dropdown" class="dropdown-toggle" >
            @item.Name
        </a>
    }
    else
    {
        <a href="/CNews/post/index/1?catelogyNewsId=@item.Id" data-hover="dropdown" class="dropdown-toggle" >
            @item.Name
        </a>
    }

    @if (Model.Any(x => Convert.ToInt64(x.ParentId) == item.Id))
    {
        <ul class="dropdown-menu pages">
            <li>
                <div class="yamm-content">
                    <div class="row">
                        <div class="col-xs-12 col-menu">
                            <ul class="links">
                                @foreach (var subItem in Model.Where(x => x.ParentId == item.Id))
                                {
                                    <li><a href="/">@subItem.Name</a></li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            </li>
        </ul>
    }
    else
    {
        <ul class="dropdown-menu pages">
            <li class="dropdown hidden-sm">  </li>
        </ul>
    }
</li>
   }

