@inject IViewLocalizer Localizer

<div id="modal-add-edit" class="modal fade in" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title">@Localizer["AddUpdateUser"]</h4>
            </div>
            <div class="modal-body">
                <div id="horizontal-form">
                    <form class="form-horizontal" role="form" id="frmMaintainance">   
                        <div class="form-group">
                            <label for="lbHinhThe" class="col-sm-3 control-label" >@Localizer["UserImage"]</label>
                            <div class="col-xs-9 form-group has-feedback">
                                <div id="imagelistUserImage" class="col-xs-9" >
                                </div>
                                <div class="col-xs-9" ><input type="file" id="fileInputUserImage" /></div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="lbFullName" class="col-sm-3 control-label">@Localizer["FullUserName"] <a style="color:red"> (*)</a></label>
                            <div class="col-sm-9">
                                <input type="text" name="txtFullName" class="form-control" id="txtFullName">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="lbUserName" class="col-sm-3 control-label">@Localizer["UserName"] <a style="color:red"> (*)</a></label>
                            <div class="col-sm-9">
                                <input type="text" name="txtUserName" class="form-control" id="txtUserName" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="lbPassword" class="col-sm-3 control-label">@Localizer["Password"] <a style="color:red"> (*)</a></label>
                            <div class="col-sm-9">
                                <input type="password" name="txtPassword" class="form-control" id="txtPassword" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="lbConfirmPassword" class="col-sm-3 control-label">@Localizer["ConfirmPassword"] <a style="color:red"> (*)</a></label>
                            <div class="col-sm-9">
                                <input type="password" name="txtConfirmPassword" class="form-control" id="txtConfirmPassword">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="lbEmail" class="col-sm-3 control-label ">@Localizer["Email"] </label>
                            <div class="col-sm-9">
                                <input type="email" name="txtEmail" class="form-control" id="txtEmail">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="lbPhoneNumber" class="col-sm-3 control-label">@Localizer["PhoneNumber"] </label>
                            <div class="col-sm-9">
                                <input type="text" name="txtPhoneNumber" class="form-control" id="txtPhoneNumber">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label ">@Localizer["CorporationName"] <a style="color:red"> (*)</a></label>
                            <div class="col-sm-9">
                                <select id="ddlAddUpdateCorporation" class="form-control"></select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">@Localizer["Permission"] <a style="color:red"> (*)</a></label>
                            <div class="col-sm-9" id="list-roles">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-3 col-sm-9">
                                <div class="checkbox">
                                    <label>
                                        <input type="checkbox" checked="checked" id="ckStatus">
                                        <span class="text">@Localizer["Active"]</span>
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <button type="button" id="btnSaveUser" class="btn btn-success">@Localizer["SaveUser"]</button>
                                <button type="button" id="btnCancelUser" data-dismiss="modal" class="btn btn-default">@Localizer["CloseUser"]</button>
                            </div>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>
