@inject IViewLocalizer Localizer
<div id="modal-edit-password" class="modal fade in" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title">@Localizer["UpdatePasswordUser"]</h4>
            </div>
            <div class="modal-body">
                <div id="horizontal-form">
                    <form class="form-horizontal" role="form" id="frmMainEditPassword">
                        <div class="form-group">                          
                            <label for="lbEditCurrentPassword" class="col-sm-2 control-label">@Localizer["CurrentPassword"]</label>
                            <div class="col-sm-10">
                                <input type="password" name="txtEditCurrentPassword" class="form-control" id="txtEditCurrentPassword" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="lbEditNewPassword" class="col-sm-2 control-label">@Localizer["NewPassword"]</label>
                            <div class="col-sm-10">
                                <input type="password" name="txtEditNewPassword" class="form-control" id="txtEditNewPassword">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <button type="button" id="btnSaveEditPass" class="btn btn-success">@Localizer["SaveEditPass"]</button>
                                <button type="button" id="btnCancelEditPass" data-dismiss="modal" class="btn btn-default">@Localizer["CancelEditPass"]</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
