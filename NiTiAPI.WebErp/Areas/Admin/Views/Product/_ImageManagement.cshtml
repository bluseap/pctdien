@inject IViewLocalizer Localizer
<div id="modal-image-manage" class="bootbox modal fade modal-darkorange in" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog  modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="bootbox-close-button close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title">@Localizer["ImageManage"]</h4>
            </div>
            <div class="modal-body">
                <input type="hidden" id="hidImageManagement" value="" />

                <div id="horizontal-form">
                    <form class="form-horizontal" role="form" id="frmMaintainanceImageManage">
                        <div class="form-group">
                            <label class="col-sm-2 control-label no-padding-right">@Localizer["ChossenImage"]</label>
                            <div class="col-sm-10">
                                <div id="ImageManagement-list" class="col-md-12">
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="txtName" class="col-sm-2 control-label no-padding-right">@Localizer["ChosseImage"]</label>
                            <div class="col-sm-10">
                                <div class="input-group">
                                    <input type="file" id="fileImageManagement" />
                                </div><!-- /input-group -->
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="modal-footer">
                <div class="col-sm-offset-2 col-sm-10">
                    @*<button type="button" id="btnSaveImages" class="btn btn-success">@Localizer["Save"]</button>*@
                    <button type="button" data-dismiss="modal" class="btn btn-danger">@Localizer["Cance"]</button>
                </div>
            </div>
        </div>
    </div>
</div>