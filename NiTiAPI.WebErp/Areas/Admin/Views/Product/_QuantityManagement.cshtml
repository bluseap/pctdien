@inject IViewLocalizer Localizer
<div id="modal-quantity-management" class="bootbox modal fade modal-darkorange in" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog  modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="bootbox-close-button close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title">@Localizer["QuantityManagement"]</h4>
            </div>
            <div class="modal-body">
                <div id="horizontal-form">                   
                    <form class="form-horizontal" role="form" id="frmMaintainanceQuantity">
                        <input type="hidden" id="hidId" value="" />

                        <div class="form-group">
                            <label class="col-sm-3 control-label ">@Localizer["ChosseSize"] <a style="color:red"> (*)</a> </label>
                            <div class="col-sm-3">
                                <select id="ddlAttributeSize" class="form-control"></select>
                            </div>
                        </div>

                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <td>@Localizer["Color"]</td>
                                    <td>@Localizer["Size"]</td>
                                    <td>@Localizer["Quantity"]</td>
                                    <td></td>
                                </tr>
                            </thead>
                            <tbody id="table-quantity-content"></tbody>
                            <tfoot>
                                <tr>
                                    <td colspan="4">
                                        <button class="btn btn-xs btn-success" type="button" id="btn-add-quantity">@Localizer["Add"]</button>
                                        <label class="control-label "><a style="color:red"> @Localizer["BeforeAdd"] </a></label>
                                    </td>                                   
                                </tr>
                            </tfoot>
                        </table>
                    </form>

                    <script type="x-tmpl-mustache" id="template-table-quantity">
                        <tr data-id="{{Id}}">
                            <td>{{{Colors}}}</td>
                            <td>{{{Sizes}}}</td>
                            <td><input type="number" class="txtQuantity form-control" value="{{Quantity}}" /></td>
                            <td><button class="btn btn-xs btn-danger btn-delete-quantity" type="button"><i class="fa fa-trash"></i></button></td>
                        </tr>
                    </script>
                </div>
            </div>
            <div class="modal-footer">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="button" id="btnSaveQuantity" class="btn btn-success">@Localizer["Save"]</button>
                    <button type="button" data-dismiss="modal" class="btn btn-danger">@Localizer["Cance"]</button>
                </div>
            </div>
        </div>
    </div>
</div>