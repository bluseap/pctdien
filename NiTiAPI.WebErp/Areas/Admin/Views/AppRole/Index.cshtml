@{
    ViewData["Title"] = "Index";
}
@inject IViewLocalizer Localizer
@section Styles{
    <link href="~/vendor/jquery-treegrid/css/jquery.treegrid.css" rel="stylesheet" />
    }
@section Scripts{
    <script src="~/vendor/jquery-treegrid/js/jquery.treegrid.js" asp-append-version="true"></script>
    <script src="~/vendor/jquery-treegrid/js/jquery.treegrid.bootstrap3.js" asp-append-version="true"></script>

    <script src="~/admin-app/controllers/approle/permission.js" asp-append-version="true"></script>
    <script src="~/admin-app/controllers/approle/addedit-role.js" asp-append-version="true"></script>
    <script src="~/admin-app/controllers/approle/index.js" asp-append-version="true"></script>
    <script>
        var approle = new approleController();
        approle.initialize();
    </script>
}
<div class="">
    <div class="page-title">
        <div class="title_left">
            <h3>@Localizer["Roles"]</h3>
        </div>
        <div class="title_right">
            <div class="col-md-3 col-sm-3 col-xs-12 form-group pull-right top_search">
                <button class="btn btn-round btn-success" id="btn-create" type="button">@Localizer["Create"]</button>
            </div>
            <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                <div class="input-group">

                </div>
            </div>
        </div>
    </div>
    <div class="page-title">
        <div class="title_left">
            <h3><small>@Localizer["ListRoles"]</small></h3>
        </div>
        <div class="title_right">
            <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                <div class="input-group">
                    <input type="text" id="txt-search-keyword" class="form-control">
                    <span class="input-group-btn">
                        <button class="btn btn-default" id="btn-search" type="button">@Localizer["Search"]</button>
                    </span>
                </div>
            </div>
            <div class="col-md-3 col-sm-2 col-xs-12 form-group pull-right top_search">
                <div class="input-group">
                    <select id="ddlCorporation" class="form-control"></select>
                </div>
            </div>
        </div>
    </div>
    <div class="clearfix"></div>
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_content">
                    <table id="tbl-roles" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0">
                        <thead>
                            <tr>
                                <th>@Localizer["RoleName"]</th>
                                <th>@Localizer["CorporationName"]</th>
                                <th width="15%"></th>
                            </tr>
                        </thead>
                        <tbody id="tbl-contentRoles"></tbody>
                    </table>

                    <div class="row">
                        <div class="col-sm-5">
                            <div class="dataTables_info" id="datatable-checkbox_info" role="status" aria-live="polite">
                                <select id="ddl-show-pageRoles">
                                    <option value="10" selected="selected">10</option>
                                    <option value="20">20</option>
                                    <option value="30">30</option>
                                    <option value="50">50</option>
                                </select>
                                <span class="item-per-page">
                                    @Localizer["RowPage"]
                                </span>
                                @Localizer["Toltal"]<strong id="lbl-total-recordsRoles"></strong>
                            </div>
                        </div><div class="col-sm-7">
                            <div class="dataTables_paginate paging_simple_numbers" id="datatable-checkbox_paginate">
                                <ul id="paginationULRoles"></ul>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <script id="table-templateRoles" type="x-tmpl-mustache">
        <tr>
            <td>{{Name}}</td>
            <td>{{CorporationName}}</td>
            <td>
                <a href="#" data-id="{{Id}}" class="btn  btn-xs btn-primary btn-grant"><i class="fa fa-eye-slash"></i></a>
                <a href="#" data-id="{{Id}}" class="btn  btn-xs btn-info btn-edit"><i class="fa fa-pencil-square-o"></i></a>
                <a href="#" data-id="{{Id}}" class="btn btn-xs  btn-danger btn-delete"><i class="fa fa-trash-o"></i></a>
            </td>
        </tr>
    </script>
</div>

<partial name="_AddEditModal.cshtml" />
<partial name="_AssignPermission.cshtml" />
