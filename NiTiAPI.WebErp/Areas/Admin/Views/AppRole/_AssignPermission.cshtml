@inject IViewLocalizer Localizer
<div id="modal-grantpermission" class="bootbox modal fade modal-darkorange in" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="bootbox-close-button close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title">@Localizer["Roles"]</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-xs-12 col-md-12">
                        <input type="hidden" id="hidRoleId" />
                        <table class="table table-hover tree" id="tblFunction">
                            <thead class="bordered-darkorange">
                                <tr>
                                    <th>@Localizer["FunctionName"]</th>
                                    <th>
                                        <label>
                                            <input type="checkbox" id="ckCheckAllView" value="{{Id}}">
                                            <span class="text">@Localizer["View"]</span>
                                        </label>
                                    </th>
                                    <th>
                                        <label>
                                            <input type="checkbox" id="ckCheckAllCreate" value="{{Id}}">
                                            <span class="text">@Localizer["Add"]</span>
                                        </label>
                                    </th>
                                    <th>
                                        <label>
                                            <input type="checkbox" id="ckCheckAllEdit" value="{{Id}}">
                                            <span class="text">@Localizer["Update"]</span>
                                        </label>
                                    </th>
                                    <th>
                                        <label>
                                            <input type="checkbox" id="ckCheckAllDelete" value="{{Id}}">
                                            <span class="text">@Localizer["Delete"]</span>
                                        </label>
                                    </th>
                                </tr>
                            </thead>
                            <tbody id="lst-data-function"></tbody>
                        </table>

                        <script id="result-data-function" type="x-tmpl-mustache">
                            <tr class="treegrid-{{Id}} {{treegridparent}}" data-id="{{FunctionId}}">
                                <td>{{Name}}</td>
                                <td>
                                    <label>
                                        <input type="checkbox" value="{{FunctionId}}" class="ckView">
                                        <span class="text"> </span>
                                    </label>
                                </td>
                                <td>
                                    <label>
                                        <input type="checkbox" value="{{FunctionId}}" class="ckAdd">
                                        <span class="text"> </span>
                                    </label>
                                </td>
                                <td>
                                    <label>
                                        <input type="checkbox" value="{{FunctionId}}" class="ckEdit">
                                        <span class="text"> </span>
                                    </label>
                                </td>
                                <td>
                                    <label>
                                        <input type="checkbox" value="{{FunctionId}}" class="ckDelete">
                                        <span class="text"> </span>
                                    </label>
                                </td>
                            </tr>
                        </script>

                    </div>
                </div>

            </div>

            <div class="modal-footer">
                <div class="row">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="button" id="btnSavePermission" class="btn btn-success">@Localizer["PermissionSave"]</button>
                        <button type="button" data-dismiss="modal" class="btn btn-default">@Localizer["PermissionClose"]</button>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>